					<a href="{{ path("product", {'slug': heartProduct.product.product.getId(), 'category': heartProduct.category.getId()}) }}" alt="Vous allez aimer {{ heartProduct.product.product.getTitleFr() }}">
						<img src="{{ heartProduct.product.image.src }}" alt="{{ heartProduct.product.image.alt }}" class="d-block w-50 img-responsive" class="img-responsive">
					</a>
					<figcaption>
						{{ heartProduct.product.product.getTitleFr()|raw }}
					</figcaption>
					
				</figure>
				
				<a href="{{ path("product", {'slug': heartProduct.product.product.getId(), 'category': heartProduct.category.getId()}) }}" class="btn btn-outline-default" role="button" title="{{ heartProduct.product.product.getTitleFr() }}">
					{{ heartProduct.category.getBtnFr()|raw }}
				</a>			
			</article>
			
			<article id="home-meeting" class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12">
				<header>
					<h3>{{ homeMeeting.content.title.fr|raw }}</h3>
				</header>
				
				<blockquote>
					{{ homeMeeting.content.content.fr|raw }}
				</blockquote>
				
				<a class="btn btn-outline-default" role="button" title="{{ homeMeeting.content.title.fr }}">
					{{ homeMeeting.content.btn.fr|raw }}
				</a>
			</article>
		</div>
	{% endblock %}
{%  endblock %}

