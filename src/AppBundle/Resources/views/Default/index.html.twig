					<h3>{{ monthProduct.category.getTitleFr()|raw }}</h3>
				</header>
				
				<figure>
					<a href="{{ path("product", {'slug': monthProduct.product.product.getId(), 'category': monthProduct.category.getId()}) }}" title="Découvrez {{ monthProduct.category.getTitleFr() }}">
						<img src="{{ monthProduct.product.image.src }}" alt="{{ monthProduct.product.image.alt }}" class="d-block w-50 img-responsive">
					</a>
					<figcaption>
						{{ monthProduct.product.product.getTitleFr()|raw }}
					</figcaption>
				</figure>
				
				<a href="{{ path("product", {'slug': monthProduct.product.product.getId(), 'category': monthProduct.category.getId()}) }}" class="btn btn-outline-default" role="button" title="{{ monthProduct.product.product.getTitleFr() }}">
					{{ monthProduct.category.getBtnFr()|raw }}
				</a>			
			</article>
		</div>
	{% endblock %}
	
	{% block heart %}
