<div class="row bs-wizard" style="border-bottom:0;">
                
	<div class="col-3 bs-wizard-step complete" id="signin">
    	<div class="text-center bs-wizard-stepnum">Etape 1</div>
        <div class="progress">
        	<div class="progress-bar"></div>
        </div>
        <a href="{{ path("signin-form", {"from": "checkout"}) }}" class="bs-wizard-dot"></a>
         <div class="bs-wizard-info text-center">Identification</div>
    </div>
                
	<div class="col-3 bs-wizard-step{% if step == "basket-list" %} active{% endif %}" id="basket-checkin"><!-- complete -->
    	<div class="text-center bs-wizard-stepnum">Etape 2</div>
        <div class="progress">
        	<div class="progress-bar"></div>
        </div>
        <a href="#" class="bs-wizard-dot"></a>
        <div class="bs-wizard-info text-center">Ajustez les quantités et vérifiez votre panier</div>
    </div>
                
	<div class="col-3 bs-wizard-step disabled" id="delivery-checkin"><!-- complete -->
		<div class="text-center bs-wizard-stepnum">Etape 3</div>
		<div class="progress">
			<div class="progress-bar"></div>
		</div>
		<a href="#" class="bs-wizard-dot"></a>
		<div class="bs-wizard-info text-center">Livraison</div>
	</div>
                
	<div class="col-3 bs-wizard-step disabled" id="payment"><!-- active -->
		<div class="text-center bs-wizard-stepnum">Etape 4</div>
		<div class="progress">
			<div class="progress-bar"></div>
		</div>
		<a href="#" class="bs-wizard-dot"></a>
		<div class="bs-wizard-info text-center">Finalisez votre commande</div>
	</div>
</div>